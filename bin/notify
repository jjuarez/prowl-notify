#!/usr/bin/ruby


$:.unshift File.dirname(__FILE__) + "/../lib"


require 'prowl/file_prowler'


module Notificators 

  #
  # CLI
  #
  class ShellNotifier

    ShellNotifier::APPLICATION = "CLIProwl:>> "

    def ShellNotifier::send( prowler, event, description )

      prowler.send_notification( ShellNotifier::APPLICATION, event, description ) 
    end
  end
end


#
# :: MAIN ::
#
if( $0 == __FILE__ )

  abort( "Usage: #{$0} 'event' 'description'") unless ARGV.length >= 2
  Notificators::ShellNotifier.send( Prowl::FileProwler.new, ARGV[0], ARGV[1] )
end

